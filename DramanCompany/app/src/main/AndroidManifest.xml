<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dramancompany.myzzung.dramancompany">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".util.DramaApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ImageDownloadActivity"
            android:label="@string/title_activity_image_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.LocalDBActivity"
            android:label="@string/title_activity_local_db"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.MaterialActivity"
            android:label="@string/title_activity_material"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.SharedElementActivity"
            android:label="@string/title_activity_shared_element"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
