<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listitem_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회사"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "/>

        <TextView
            android:id="@+id/listitem_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직책"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listitem_match_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="match key"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "/>

        <TextView
            android:id="@+id/listitem_match_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="match value"/>
    </LinearLayout>

</LinearLayout>